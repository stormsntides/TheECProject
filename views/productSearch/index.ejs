<!DOCTYPE html>
<html>
  <head>
    <title>Product Search</title>
    <meta name="viewport" charset="utf-8" content="width=device-width, initial-scale=1">
    <meta name="theme-color" content="#b71c1c">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.2/css/materialize.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css"> <!-- This is removed from original file -->
    <link rel="stylesheet" href="/public/stylesheets/general-styles.css"> <!-- This is removed from original file -->
    <link rel="stylesheet" href="/public/stylesheets/productSearchStyles/product-styles.css">
  </head>
  <body class="black"> <!-- Originally was class="grey darken-4" -->
    <header>
      <!-- Fixed Navbar with actions for manipulating data -->
      <div class="navbar-fixed">
        <nav class="red darken-4">
          <div class="nav-wrapper container">
            <a href="/" class="brand-logo left">Product Search</a>
            <a href="#" data-activates="slide-out" class="button-collapse right"><i class="material-icons">menu</i></a>
            <ul class="right hide-on-med-and-down">
              <li><a class="modal-trigger" href="#add-form">Add Product</a></li>
              <li><a class="dropdown-button" href="#!" data-activates="quick-dropdown">Quick Search<i class="material-icons right">arrow_drop_down</i></a></li>
              <li><a class="dropdown-button" href="#!" data-activates="recent-dropdown">Recent Searches<i class="material-icons right">arrow_drop_down</i></a></li>
            </ul>
          </div>
        </nav>
      </div>
      <!-- When using navbar-fixed, side-nav must be outside of it in order to allow links to be clicked -->
      <ul id="slide-out" class="side-nav">
        <li><a class="modal-trigger" href="#add-form">Add Product</a></li>
        <li class="no-padding">
          <ul class="collapsible collapsible-accordion">
            <li>
              <a class="collapsible-header">Quick Searches<i class="material-icons">arrow_drop_down</i></a>
              <div class="collapsible-body">
                <ul class="quick-search">
                  <li class="right-align"><a href="#!" class="teal-text">all</a></li>
                  <li class="right-align"><a href="#!" class="teal-text">acoustic</a></li>
                  <li class="right-align"><a href="#!" class="teal-text">bass</a></li>
                  <li class="right-align"><a href="#!" class="teal-text">capo</a></li>
                  <li class="right-align"><a href="#!" class="teal-text">classical</a></li>
                  <li class="right-align"><a href="#!" class="teal-text">electric</a></li>
                  <li class="right-align"><a href="#!" class="teal-text">picks</a></li>
                  <li class="right-align"><a href="#!" class="teal-text">player</a></li>
                  <li class="right-align"><a href="#!" class="teal-text">refill</a></li>
                  <li class="right-align"><a href="#!" class="teal-text">slide</a></li>
                  <li class="right-align"><a href="#!" class="teal-text">strings</a></li>
                </ul>
              </div>
            </li>
            <li>
              <a class="collapsible-header">Recent Searches<i class="material-icons">arrow_drop_down</i></a>
              <div class="collapsible-body">
                <ul class="recent-searches"></ul>
              </div>
            </li>
          </ul>
        </li>
      </ul>
      <!-- Dropdowns in the navbar -->
      <ul id="quick-dropdown" class="dropdown-content quick-search">
        <li class="right-align"><a href="#!" class="teal-text">all</a></li>
        <li class="right-align"><a href="#!" class="teal-text">acoustic</a></li>
        <li class="right-align"><a href="#!" class="teal-text">bass</a></li>
        <li class="right-align"><a href="#!" class="teal-text">capo</a></li>
        <li class="right-align"><a href="#!" class="teal-text">classical</a></li>
        <li class="right-align"><a href="#!" class="teal-text">electric</a></li>
        <li class="right-align"><a href="#!" class="teal-text">picks</a></li>
        <li class="right-align"><a href="#!" class="teal-text">player</a></li>
        <li class="right-align"><a href="#!" class="teal-text">refill</a></li>
        <li class="right-align"><a href="#!" class="teal-text">slide</a></li>
        <li class="right-align"><a href="#!" class="teal-text">strings</a></li>
      </ul>
      <ul id="recent-dropdown" class="dropdown-content recent-searches"></ul>
    </header> <!-- end Nav -->
    <main>
      <!-- Unseen menus/forms not located inside of navbar -->
      <div id="unseen">
        <!-- Modal Structure add -->
        <form id="add-form" class="modal" action="/demo/product/" method="POST">
          <div class="modal-content">
            <div class="row">
              <div class="col s12">
                <div class="input-field">
                  <input name="product[name]" type="text" class="validate">
                  <label for="product[name]">Name</label>
                </div>
              </div>
              <div class="col s12 m5">
                <div class="input-field">
                  <input name="product[code]" type="text" class="validate">
                  <label for="product[code]">Code</label>
                </div>
              </div>
              <div class="col s12 m5">
                <div class="input-field">
                  <input name="product[manu]" type="text" class="validate">
                  <label for="product[manu]">Manufacturer</label>
                </div>
              </div>
              <div class="col s12 m2">
                <div class="input-field">
                  <input name="product[loc]" type="text" class="validate">
                  <label for="product[loc]">Location</label>
                </div>
              </div>
              <div class="col s12">
                <div class="input-field">
                  <textarea name="product[desc]" class="materialize-textarea"></textarea>
                  <label for="product[desc]">Description</label>
                </div>
                <div class="input-field">
                  <input name="product[tags]" type="text" class="validate" placeholder="enter tags separated by commas">
                  <label for="product[tags]">Tags</label>
                </div>
              </div>
            </div>
          </div>
          <div class="modal-footer">
            <button type="submit" class="modal-action modal-close waves-effect waves-green btn-flat">Add</button>
            <a href="#!" class="modal-action modal-close waves-effect waves-grey btn-flat">Cancel</a>
          </div>
        </form> <!-- end Modal add -->
        <!-- Modal Structure edit -->
        <form id="edit-form" class="modal" method="POST">
          <div class="modal-content">
            <div class="row">
              <div class="col s12">
                <div class="input-field">
                  <input name="product[name]" type="text" class="validate">
                  <label for="product[name]">Name</label>
                </div>
              </div>
              <div class="col s12 m5">
                <div class="input-field">
                  <input name="product[code]" type="text" class="validate">
                  <label for="product[code]">Code</label>
                </div>
              </div>
              <div class="col s12 m5">
                <div class="input-field">
                  <input name="product[manu]" type="text" class="validate">
                  <label for="product[manu]">Manufacturer</label>
                </div>
              </div>
              <div class="col s12 m2">
                <div class="input-field">
                  <input name="product[loc]" type="text" class="validate">
                  <label for="product[loc]">Location</label>
                </div>
              </div>
              <div class="col s12">
                <div class="input-field">
                  <textarea name="product[desc]" class="materialize-textarea"></textarea>
                  <label for="product[desc]">Description</label>
                </div>
                <div class="input-field">
                  <input name="product[tags]" type="text" class="validate" placeholder="enter tags separated by commas">
                  <label for="product[tags]">Tags</label>
                </div>
              </div>
            </div>
          </div>
          <div class="modal-footer">
            <button type="submit" class="modal-action modal-close waves-effect waves-green btn-flat">Update</button>
            <a href="#!" class="modal-action modal-close waves-effect waves-grey btn-flat">Cancel</a>
            <a id="delete-product-btn" href="#delete-form" class="modal-action modal-close modal-trigger waves-effect waves-red btn-flat">Delete</a>
          </div>
        </form> <!-- end Modal edit -->
        <!-- Modal Structure delete -->
        <form id="delete-form" class="modal" method="POST">
          <div class="modal-content">
            <h2 class="red-text center-align">WARNING!</h2>
            <hr>
            <h5 class="center-align">You are about to delete <span id="delete-product-code"></span>, <span id="delete-product-name"></span>.</h5>
            <p class="center-align">This action is <strong>PERMANENT</strong> and cannot be undone! Are you sure you want to delete this product?</p>
          </div>
          <div class="modal-footer">
            <button type="submit" class="modal-action modal-close waves-effect waves-green btn-flat">Confirm</button>
            <a href="#!" class="modal-action modal-close waves-effect waves-grey btn-flat">Cancel</a>
          </div>
        </form> <!-- end Modal delete -->
      </div> <!-- end Unseen menus/forms -->
      <div class="row">
        <div class="col s12 m2">
          <div id="filters"></div>
        </div>
        <div class="col s12 m8">
          <form id="search-form">
            <div class="input-field">
              <i class="material-icons prefix white-text">search</i>
              <input id="search" type="text" name="search" class="validate center-align white-text" autocomplete="off">
              <label for="search">Enter Product</label>
            </div>
          </form>
          <div id='results' class='row'></div>
          <ul class="pagination"></ul>
        </div>
      </div>
    </main>
    <!-- Below is not a part of the original file -->
    <% include ../partials/copyright %>
