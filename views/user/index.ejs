<% include ../partials/headerOpen %>

<% include ../partials/headerClose %>
<% include ../partials/navbar-main %>

<main>
  <div class="row">
    <div class="col s12 m5 push-m7">
      <div class="row">
        <div class="col s12 m10">
          <div id="login-card" class="card hoverable">
            <div class="card-content">
              <span class="card-title"><strong>Login</strong></span>
              <p>Enter your username and password to log in.</p>
              <h5>Don't have an account?</h5>
              <p><a href="#!" class="toggle-forms">Sign up</a> now!</p>
            </div>
          </div>
          <div id="register-card" class="card hoverable" style="display: none;">
            <div class="card-content">
              <span class="card-title"><strong>Sign Up</strong></span>
              <p>Enter a new username and password to sign up.</p>
              <h5>Already have an account?</h5>
              <p><a href="#!" class="toggle-forms">Login</a> now!</p>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="col s12 m7 pull-m5">
      <div class="row">
        <div class="col s12 m1">

        </div>
        <div class="col s12 m11">
          <h1 class="grey-text text-darken-3"><i class="medium material-icons">account_circle</i> Account Portal</h1>
        </div>
      </div>
      <div class="row">
        <div class="col s12 m2">

        </div>
        <div class="col s12 m10">
          <form id="login-form" action="/user/login" method="POST">
            <div class="row">
              <div class="input-field col s12">
                <input id="username" class="validate" type="text" name="username" placeholder="username">
                <label for="username">Username</label>
              </div>
            </div>
            <div class="row">
              <div class="input-field col s12">
                <input id="password" class="validate" type="password" name="password" placeholder="password">
                <label for="password">Password</label>
              </div>
            </div>
            <button class="btn waves-effect waves-light hoverable" type="submit" name="action">Login</button>
          </form>
          <form id="register-form" action="/user/register" method="POST" style="display: none;">
            <div class="row">
              <div class="input-field col s12">
                <input id="username" class="validate" type="text" name="username" placeholder="username">
                <label for="username">New Username</label>
              </div>
            </div>
            <div class="row">
              <div class="input-field col s12">
                <input id="password" class="validate" type="password" name="password" placeholder="password">
                <label for="password">New Password</label>
              </div>
            </div>
            <button class="btn waves-effect waves-light hoverable" type="submit" name="action">Create</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</main>

<% include ../partials/jquery %>
<% include ../partials/flash %>

<script>
  $(function(){
    $(".toggle-forms").on("click", function(){
      $("#register-form").slideToggle();
      $("#login-form").slideToggle();
      $("#register-card").slideToggle();
      $("#login-card").slideToggle();
    });
  });
</script>

