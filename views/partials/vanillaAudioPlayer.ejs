<div class="audio-player">
  <div class="card see-through">
    <div class="card-content">
      <span class="card-title">
        <span class="audio-label" name="title">Loading...</span>
      </span>
      <div>
        <p><em><span class="audio-label" name="album">(Album)</span> - <span class="audio-label" name="artist">(Artist)</span></em></p>
        <p><em><span class="audio-label" name="producer">(Producer)</span></em></p>
      </div>
    </div>
    <div class="card-action">
      <div class="audio-progress" data-played-class="blue" data-show-time="true"></div>
      <div class="valign-wrapper">
        <a class="audio-control blue-text" name="skip-previous"><i class="small material-icons">skip_previous</i></a>
        <a class="audio-control blue-text" name="play"><i class="small material-icons">play_arrow</i></a>
        <a class="audio-control blue-text" name="pause" style="display: none"><i class="small material-icons">pause</i></a>
        <a class="audio-control blue-text" name="replay" style="display: none"><i class="small material-icons">refresh</i></a>
        <a class="audio-control blue-text" name="skip-next"><i class="small material-icons">skip_next</i></a>
        <span class="audio-label" name="time"></span>
        <div class="margin-left">
          <a href="#playlist" class="modal-trigger blue-text"><i class="material-icons">playlist</i></a>
        </div>
      </div>
    </div>
  </div>
  <div id="playlist" class="modal modal-fixed-footer">
    <div class="modal-content">
      <h4 class="center-align">Song Library</h4>
      <hr>
      <% if(songs){ %>
        <ul>
          <% songs.forEach(function(song, songIndex){ %>
            <li>
              <div class="valign-wrapper">
                <a class='audio-control' href='#!' name='select' for='<%= song.title %>'>
                  <p class="valign-wrapper"><%= song.title %> - <em>by <%= song.artist %></em></p>
                </a>
                <div class="margin-left">
                  <a href="#!" class="info-hide" data-target="song-<%= songIndex %>-info"><i class="material-icons">info</i></a>
                </div>
              </div>
              <div id="song-<%= songIndex %>-info" style="display: none">
                <p>Off of the album "<%= song.album %>", Produced by <%= song.producer %></p>
                <p>"<%= song.description %>"</p>
              </div>
              <audio src='/admin/audio/stream/<%= song.filename %>' preload="metadata" type="<%= song.contentType %>" data-title='<%= song.title %>' data-album="<%= song.album %>" data-artist="<%= song.artist %>" data-producer="<%= song.producer %>" data-duration="<%= song.duration %>"></audio>
            </li>
            <li class="divider"></li>
          <% }); %>
        </ul>
      <% } else { %>
        <p>No songs available.</p>
      <% } %>
    </div>
    <div class="modal-footer">
      <div class="valign-wrapper">
        <span class="audio-control valign-wrapper" name="playback-wrapper">
          <span class="audio-control" name="playback" data-inner-class="blue-text" data-icon-class="small" disabled="true"></span>
          <span class="audio-label" name="title">Loading...</span>
        </span>
        <div class="margin-left">
          <button class="modal-action modal-close btn btn-flat transparent waves-effect">Close</button>
        </div>
      </div>
    </div>
  </div>
</div>
