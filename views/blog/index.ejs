<% include ../partials/headerOpen %>

<% include ../partials/headerClose %>
<% include ../partials/navbar-main %>

<main>
  <div class="row">
    <div class="col s12 l2">

    </div>
    <div class="col s12 l8">
      <h1>Blogs</h1>
      <div class="row">
        <% blogposts.forEach(function(blogpost){ %>
          <article class="col s12 m6 l4">
            <a href="/blog/<%= blogpost._id %>">
              <div class="card small hoverable">
                <div class="card-content">
                  <span class="card-title black-text"><%= blogpost.title %></span>
                  <p class="grey-text text-darken-3">
                    <%= blogpost.content.summary %>
                  </p>
                </div>
                <div class="card-action">
                  <% var options = {timeZone: "America/New_York", weekday: "short", month: "short", day: "numeric", year: "numeric"} %>
                  <span class="deep-orange-text text-darken-2"><%= blogpost.date.toLocaleString("en-US", options) %></span>
                </div>
              </div>
            </a>
          </article>
        <% }); %>
      </div>
    </div>
    <div class="col s12 l2">

    </div>
  </div>
</main>

<% include ../partials/copyright %>
